@using doan.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Private/Views/Shared/_Layout.cshtml";
    int i = 0;
    List<khachHang> ds = (List<khachHang>)ViewData["DSKhachHang"];
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Danh sách khách hàng
        </h1>
        <ol class="breadcrumb">
            <li><a href='@Url.Action("Index", "TrangChu")'><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Danh mục khách hàng</a></li>
            <li class="active">Danh sách khách hàng</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Thông tin khách hàng</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Stt</th>
                                    <th>Họ</th>
                                    <th>Tên</th>
                                    <th>Giới tính</th>
                                    <th>Số điện thoại</th>
                                    <th>Số lần mua hàng</th>
                                    <th>Email</th>
                                    <th>Địa chỉ</th>
                                    <th>Mật khẩu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (khachHang item in ds)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.hoDem</td>
                                        <td>@item.tenKH</td>
                                        <td>@item.gioiTinh</td>
                                        <td>@item.soDT</td>
                                        <td>@item.soLanMua</td>
                                        <td>@item.email</td>
                                        <td>@item.diaChi</td>
                                        <td>@item.matKhau</td>
                                    </tr>
                                }


                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->


            </div>
            <!-- /.col -->
        </div>

        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>




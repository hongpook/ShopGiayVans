@using doan.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Private/Views/Shared/_Layout.cshtml";
    List<sanPham> sp = (List<sanPham>)ViewData["DSSanPham"];
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Tất cả sản phẩm
        </h1>
        <ol class="breadcrumb">
            <li><a href='@Url.Action("Index", "TrangChu")'><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Danh mục sản phẩm</a></li>
            <li class="active">Tất cả sản phẩm</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tất cả sản phẩm</h3>
                        <a href='@Url.Action("Create", "TatCaSP")' class="btn btn-primary" >Thêm sản phẩm</a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th>Nhà sản xuất</th>
                                    <th>Đơn vị</th>
                                    <th>Giá bán</th>
                                    <th>Giảm giá</th>
                                    <th>Đã duyệt</th>
                                    <th>Nhóm lệnh</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (sanPham item in sp)
                                {
                                    <tr>
                                        <td>@item.maSP</td>
                                        <td><a href="#">@item.tenSP</a></td>
                                        <td class="td-img"><img src="@item.hinhDD"/></td>
                                        <td>@item.nhaSanXuat</td>
                                        <td>@item.dvt</td>
                                        <td>@item.giaBan</td>
                                        <td>@item.giamGia</td>
                                        <td>@item.daDuyet</td>
                                        <td>
                                            @using (Html.BeginForm("Active", "TatCaSP", FormMethod.Post))
                                            {
                                                <input type="hidden" name="maSP" value="@item.maSP" />
                                                <button title="Xem Sản Phẩm" class="btn btn-primary">@ViewBag.btnSP</button>
                                            }

                                            @using (Html.BeginForm("Edit", "TatCaSP", FormMethod.Post))
                                            {
                                                <input type="hidden" name="maSP" value="@item.maSP" />
                                                <button title="Chỉnh Sửa Sản Phẩm" class="btn"><i class="fa-regular fa-pen-to-square"></i></button>
                                            }

                                            @using (Html.BeginForm("Delete", "TatCaSP", FormMethod.Post))
                                            {
                                                <input type="hidden" name="maSP" value="@item.maSP" />
                                                <button title="Xóa Sản Phẩm" class="btn btn-danger"><i class="fa-solid fa-xmark"></i></button>
                                            }


                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->


            </div>
            <!-- /.col -->
        </div>

        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

